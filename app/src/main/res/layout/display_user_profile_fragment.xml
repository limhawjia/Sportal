<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="wjhj.orbital.sportsmatchfindingapp.user.DisplayUserProfileViewModel" />

        <import type="android.view.View" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.DisplayUserProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/display_user_profile_pic_container"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/display_user_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@color/colorPrimaryDark"
                    android:imageUri="@{viewModel.displayPicUri}"
                    android:contentDescription="@string/image" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/circular_crop"
                    android:contentDescription="@string/image" />

                <ImageButton
                    android:id="@+id/add_display_pic_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/image" />

            </FrameLayout>

            <TextView
                android:id="@+id/display_user_display_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toEndOf="@id/display_user_profile_pic_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@{viewModel.displayName}"/>

            <TextView
                android:id="@+id/display_user_bio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/display_user_profile_pic_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/display_user_display_name"
                android:textStyle="italic"
                android:gravity="center"
                android:text="@{viewModel.bio}"/>
            
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@{viewModel.isFriend() ? @color/colorPrimary : @color/green}"
                app:layout_constraintStart_toEndOf="@id/display_user_profile_pic_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/display_user_bio"
                android:visibility="@{viewModel.isCurrentUser() ? View.VISIBLE : View.VISIBLE}"
                android:text='@{viewModel.isFriend() ? "Friends" : "Add friend"}'/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>